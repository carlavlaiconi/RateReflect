<mvc:View
    controllerName="ratereflect.controller.ViewFeedbacks"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="View my feedbacks"
    >
        <content>
            <HBox id='navigationButtons'>
                <Button
                    id="_IDGenButton1"
                    text="Received"
                    class="myProfile"
                    press="onReceivedPress"
                />
                <Button
                    id="_IDGenButton2"
                    text="Sent"
                    class="myProfile"
                    press="onSentPress"
                />
            </HBox>
            <Panel id="ReceivedFeedbackPanel" >
            <Table
                id="idProductsTableReceived"
                inset="false"
                items="{viewModel>/FeedbacksSet}"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar1">
                        <Label
                            id="_IDGenLabel1"
                            text="Feedbacks"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="_IDGenColumn1"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel2"
                            text="Name"
                        />
                    </Column>
                     <Column
                        id="_IDGenColumn3"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel4"
                            text="Date"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn4"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel5"
                            text="Status"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn2"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel3"
                            text="Sender"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text
                                id="idListItem"
                                text="{viewModel>Project_name}"
                            />
                        </cells>
                        <cells>
                            <Text
                                id="idListItem3"
                                text="{viewModel>FB_Date}"
                            />
                        </cells>
                           <cells>
                            <Text
                                id="idListItem4"
                                text="{viewModel>Status}"
                            />
                        </cells>
                        <cells>
                            <Text
                                id="idListItem2"
                                text="{viewModel>Sender_Name}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </Panel>

            <Panel id="SentFeedbacksPanel" visible="false" >
            <Table
                id="idProductsTableSent"
                inset="false"
                items="{
                    path: '/FeedbacksSet'
                }"

            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar12">
                        <Label
                            id="_IDGenLabel12"
                            text="Feedbacks"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="_IDGenColumn12"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel22"
                            text="Name"
                        />
                    </Column>
                     <Column
                        id="_IDGenColumn32"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel42"
                            text="Date"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn42"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel52"
                            text="Status"
                        />
                    </Column>
                    <Column
                        id="_IDGenColumn22"
                        width="12em"
                    >
                        <Label
                            id="_IDGenLabel32"
                            text="Receiver"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem12">
                        <cells>
                            <Text
                                id="idListItem222"
                                text="{Project_name}"
                            />
                        </cells>
                        <cells>
                            <Text
                                id="idListItem32"
                                text="{FB_Date}"
                            />
                        </cells>
                           <cells>
                            <Text
                                id="idListItem42"
                                text="{Status}"
                            />
                        </cells>
                        <cells>
                            <Text
                                id="idListItem22"
                                text="{Receiver_Name}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
