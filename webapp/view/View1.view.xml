<mvc:View controllerName="ratereflect.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="_IDGenVBox1" class="login-container">

            <Title id="_IDGenTitle1" text="Log in" level="H2" />
            
                <Input id="Login_email"
                    class="field"
                    placeholder="Email"
                    type="Email"
                    width="15em"
                />
                <Input id="Login_password"
                    class="field"
                    placeholder="Password"
                    type="Password"
                    width="15em"
                />
                <HBox id="_IDGenHBox1" class="button-container">
                    <Button id="_IDGenButton2" text="Forgot Password" class="forgotpasswordButton" press="onForgotPaswordPress" />
                    <Button id="_IDGenButton1" text="Log in" class="logInButton" press="onLoginPress" />
                    <Button id="_IDGenButton12" text="view feedbacks" class="logInButton" press="onViewPress" />
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>